<h3 class="text-center">通報詳細</h3>
<div class="form-group text-center">
      <div class="mt-3">
        <strong>通報ID：</strong>
        <%= Report.reported_count(@user.id) %>
      </div>
    </div>
<div class="form-group text-center">
      <div class="mt-3">
        <strong>ユーザー名：</strong>
        <%= Report.reported_count(@user.id) %>
      </div>
    </div>
<div class="form-group text-center">
      <div class="mt-3">
        <strong>通報者：</strong>
        <%= Report.reported_count(@user.id) %>
      </div>
    </div>
<div class="form-group text-center">
      <div class="mt-3">
        <strong>通報理由：</strong>
        <%= Report.reported_count(@user.id) %>
      </div>
    </div>
<div class="form-group text-center">
  <%= form_with model: @report, url: admin_report_path, method: :patch do |f| %>
      <div class="mt-3">
        <strong>対応ステータス：</strong>
        <%= f.select :check, Report.checks.keys.map { |key| [key.humanize, key] } %>
      </div>
    </div>

      <div class="form-group text-center">
        <%= f.submit "ステータスを更新", class: "btn btn-primary mx-auto" %>
      </div>
  <% end %>
  </div>
</div>

