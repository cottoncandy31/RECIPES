<div class="container col-xl-8 col-lg-9 my-4 px-sm-1">
  <div class="px-1 ml-md-2">
    <h5 class="bg-light text-center ml-5 mb-4" style="max-width: 200px;">レシピ詳細</h5>
  </div>
  <div class="mx-auto col-12">
    <div class="table-responsive">
      <table class="table table-expanded">
        <thead>
          <tr>
            <th class="bg-light">画像</th>
            <th class="bg-light">タイトル</th>
            <th class="bg-light">説明</th>
            <th class="bg-light">投稿者</th>
            <th class="bg-light">価格帯</th>
            <th class="bg-light">いいね</th>
            <th class="bg-light">コメント</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td> 
              <% if @recipe.post_image.attached? %>
                <%= link_to admin_recipe_path(@recipe) do %>
                  <%= image_tag @recipe.post_image, size: "100x100" %>
                <% end %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
            <td><%= @recipe.title %></td>
            <td><%= @recipe.body %></td>
            <td><%= link_to @recipe.user.name, admin_user_path(@recipe.user) %></td>
            <td></td>
            <td><%= link_to "#{@recipe.comments.count} 件のコメントをすべて見る" %></td>
            <td>
              <!-- コメント内容の表示 -->
              <% @recipe.comments.each do |comment| %>
                <%= comment.comment %>
                by <%= link_to comment.user.name, admin_user_path(comment.user) %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <!-- 投稿のボタン -->
    <%= button_to "この投稿を削除する", admin_recipe_path, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "本当に削除しますか？" } %>
  </div>
</div>
