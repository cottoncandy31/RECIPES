<div class="container my-4 px-sm-1">
   <div class="px-1 ml-md-5">
    <h5 class="bg-light text-center ml-5 mb-4" style="width: 130px;">マイページ</h5>
  </div>
  
  <div class="col-sm-4 col-md-11 col-lg-10 col-xl-8 px-sm-0 px-md-1">
    <div class="d-flex align-items-center my-3 ">
      <h5 class="my-0 font-weight-bold">登録情報</h5>
      <%#= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success btn-sm px-4 ml-3 m-0" %>
    </div>
    <table class="table table-bordered table-hover">
      <tr>
        <th class="bg-light col-4">ユーザー名</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th class="bg-light col-4">メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
    
    <!-- 会員の利用停止ボタン -->
    <%= button_to "この会員の利用を停止", admin_user_path(@user), method: :patch, class: "btn btn-danger btn-sm", data: { confirm: "本当に退会しますか？" } %>
    
    <!--#フォロー/フォロワー数の表示-->
    <%= render 'public/relationships/follow_list', users: @users %>
    
  </div>
  
  <div class="col-sm-8 col-md-11 col-lg-10 col-xl-8 px-sm-0 px-md-1">
    <h5 class="my-0 font-weight-bold">マイレシピ</h5>
    <!-- ユーザーの投稿一覧 -->
    <% @recipes.each do |recipe| %>
    <div>
      <%= link_to admin_recipe_path(recipe.id) do %>
        <%= image_tag recipe.post_image %></br>
        レシピ名：<%= recipe.title %>
      <% end %>
      <!--<p>投稿ユーザー画像：<%#= image_tag post_image.user.get_profile_image(100,100) %></p>-->
    </div>
    <% end %>
  </div>
</div>


