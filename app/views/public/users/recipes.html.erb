<div class="container">
  <div class="row">
    <div class="col-sm-8 col-md-11 col-lg-10 col-xl-8 px-sm-0 px-md-1">
      <h3 class="bg-light text-center ml-5 mb-4" style="max-width: 500px;"><%= @user.name %>さんのレシピ投稿</h3>
      <div class="d-flex align-items-center">
        <div class="mr-3">
          <%= image_tag @user.get_profile_image(100, 100) %>
        </div>
        <div>
          <div><%= link_to "フォロー数: #{@user.followings.count}", followings_public_user_path(@user) %></div>
          <div><%= link_to "フォロワー数: #{@user.followers.count}", followers_public_user_path(@user) %></div>
        </div>
        <div class="ml-5">
          <!-- フォローボタンの表示 -->
          <% if current_user && current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to public_user_relationships_path(@user.id), method: :delete, class: 'btn btn-danger' do %>
                フォロー外す
              <% end %>
            <% else %>
              <%= link_to public_user_relationships_path(@user.id), method: :post, class: 'btn btn-primary' do %>
                フォローする
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-sm-8 col-md-11 col-lg-10 col-xl-12 px-sm-0 px-md-1">
    <div class="p-3">
      <div class="row recipe-row">
        <% @recipes.each do |recipe| %>
          <% if recipe.is_deleted == false %>
            <div class="col-6 col-md-3 col-lg-2">
              <%= link_to public_recipe_path(recipe.id) do %>
                <%= image_tag recipe.post_image, size: "200x200" %><br>
                レシピ名：<%= recipe.title %>
              <% end %>
            </div>
          <% else %>
            <div class="col-6 col-md-3 col-lg-2">
              <td class="text-muted">管理者によって投稿が削除されました</td>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>




