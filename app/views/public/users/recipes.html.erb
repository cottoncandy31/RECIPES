<h1>マイレシピ</h1>

<!--#フォローボタンの表示-->
    <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", public_user_relationships_path(@user.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", public_user_relationships_path(@user.id), method: :post %>
    <% end %>

    <!--#フォロー/フォロワー数の表示-->
    <%= render 'public/relationships/follow_list', users: @users %>

  </div>

  <div class="col-sm-8 col-md-11 col-lg-10 col-xl-8 px-sm-0 px-md-1">
    <h5 class="my-0 font-weight-bold">マイレシピ</h5>
    <!-- ユーザーの投稿一覧 -->
    <% @recipes.each do |recipe| %>
    <div>
      <%= link_to public_recipe_path(recipe.id) do %>
        <%= image_tag recipe.post_image %></br>
        レシピ名：<%= recipe.title %>
      <% end %>
      <!--<p>投稿ユーザー画像：<%#= image_tag post_image.user.get_profile_image(100,100) %></p>-->
    </div>
    <% end %>
  </div>