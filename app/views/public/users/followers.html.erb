<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-11 col-lg-10 col-xl-8 px-sm-0 px-md-1">
      <h3 class="bg-light text-center ml-5 mb-4" style="max-width: 300px; margin: 0 auto;">フォロワー一覧</h3>
      <div class="d-flex flex-wrap justify-content-center">
        <% if @users.any? %>
          <% @users.each do |user| %>
            <table>
              <tbody>
                <tr>
                  <td class="pr-2"><%= image_tag user.get_profile_image(100, 100) %></td>
                  <td class="pr-2"><%= link_to user.name, recipes_public_user_path(user) %></td>
                  <td class="pr-2">フォロー数: <%= user.followings.count %></td>
                  <td>フォロワー数: <%= user.followers.count %></td>
                </tr>
              </tbody>
            </table>
          <% end %>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
