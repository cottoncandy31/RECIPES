<h1>会員情報編集(Edit)</h1>

<div class="container my-4 px-sm-1">
  <div class="px-1 ml-md-3">
    <h5 class="bg-light text-center ml-5 mb-4" style="width: 160px;">会員情報編集</h5>
  </div>
  <div class="col-sm-12 col-md-11 col-lg-11 col-xl-9 px-sm-0 px-md-1 mt-3">
    <!--<#%= render 'layouts/errors', obj: @user %>-->
    <%= form_with(model: @user, url: customers_path(@user), method: :patch) do |f| %>
      <form>
        <div class="form-group row ml-3">
          <label class="col-md-3 col-form-label">ユーザー名</label>
          <div class="col-md-9 form-row">
            <div class="col-md-4 mr-md-5">
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>
        </div>
  
        <div class="form-group row ml-3">
          <label class="col-md-3 col-form-label">メールアドレス</label>
          <div class="col-md-9 form-row">
            <div class="col-md-6">
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
  
        <div class="form-group row ml-3">
          <label class="col-md-3 col-form-label"></label>
          <div class="col-md-9 form-row">
            <div class="col-5">
              <%= f.submit "編集内容を保存", class: "btn btn-success px-5" %>
            </div>
          </div>
        </div>
      </form>
    <% end %>
  </div>
</div>
