<div class="container my-6 px-sm-1">
  <div class="px-1 ml-md-5">
    <h5 class="bg-light text-center ml-5 mb-6" style="width: 200px;">ブックマーク一覧</h5>
  </div>
    <div class="col-md-10 offset-md-1">
      
   
        <% @recipes.each do |bookmarked_recipe| %>
        <div>
          <%= link_to public_recipe_path(bookmarked_recipe.id) do %>
            <%= image_tag bookmarked_recipe.post_image %></br>
            レシピ名：<%= bookmarked_recipe.title %>
          <% end %>
        </div>
        <% end %>
    
    </div>
</div>
