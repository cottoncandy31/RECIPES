<h1>レシピの編集</h1>

<h2>編集画面</h2>

<%= form_with model: @recipe, url: public_recipe_path(@recipe.id), method: :patch do |f| %>
  
  <h3>画像</h3>
<% if @recipe.post_image.attached? %>
  <%= link_to public_recipe_path(@recipe) do %>
    <%= image_tag @recipe.post_image, size: "100x100" %>
  <% end %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>
<%= f.file_field :post_image %>

  <h3>タイトル</h3>
  <%= f.text_field :title %>
  
  <h3>説明</h3>
  <%= f.text_area :body %>
  
  <h3>コメント</h3>
  <%= render 'form', recipe: @recipe %>
  
  <h3>ジャンル</h3>
  
  <h3>価格帯</h3>
  
  <%= f.submit '変更を保存' %>
  
<% end %>