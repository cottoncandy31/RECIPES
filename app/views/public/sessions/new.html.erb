<div class="box2 text-center">
  <div class="box-inner">
    
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="text-center">
        <h3 class="bg-light d-inline-block mb-4" style="max-width: 300px;">ログイン</h3>
      </div>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 300px;" %>
      </div>
      <br/>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <!--<div class="column-right">-->
          <!--  <#%= link_to "パスワードを忘れた場合", new_user_password_path %>-->
          <!--</div>-->
        </div>
        <%= f.password_field :password, autocomplete: "current-password", style: "width: 250px;" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
        <!--<#% if devise_mapping.rememberable? %>-->
        <!--<div class="remember">-->
        <!--  <#%= f.check_box :remember_me %>-->
        <!--  <#%= f.label :remember, "ログインしたままにする" %>-->
        <!--<#/div>-->
        <!--<#% end %>-->
      </div>
    <% end %>
    
    <div class="box-newusr mt-4">
      <p><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
